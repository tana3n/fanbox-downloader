{
  "manifest_version": 3,
  "name": "fanbox-downloader",
  "description": "PIXIV FANBOXの作品ページから右クリック保存",
  "version": "1.3.6",
  "author": "tana3n",
  "icons": {
      "48": "icon_48.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.fanbox.cc/*"],
      "js": ["fanbox-downloader.js"]
    }
  ],
  "background": {
      "service_worker": "event_page.js"
  },
  "permissions": [
      "downloads",
      "storage",
      "tabs",
      "contextMenus"
  ],
  "host_permissions":[
    "*://*.fanbox.cc/*"
  ],
  "web_accessible_resources": [{
    "resources": ["icon_48.png"],
    "matches": ["*://*.fanbox.cc/*"]
  }],
  "options_ui":{
    "page":"settings.html"
  }

}